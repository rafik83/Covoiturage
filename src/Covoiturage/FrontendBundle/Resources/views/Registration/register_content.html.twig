<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">





    <div class="f-row">
        <div class="full-width">
            <label for="name">{{ form_label(form.username,'Login')}}</label>
            {{ form_widget(form.username,{ 'attr' : {'class':'form-control','id':'name'}}) }}
            {{form_errors(form.username)}}
        </div>
    </div>


    <div class="f-row">
        <div class="full-width">
            <label for="email">{{ form_label(form.email,'Email')}}</label>
            {{ form_widget(form.email,{ 'attr' : {'class':'form-control','id':'email'}}) }}
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="f-row">
        <div class="full-width">
            <label for="password">{{ form_label(form.plainPassword.first, 'Mot de passe', { 'attr': {'class': 'form-label','id': 'password'} }) }}</label>
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
            {{form_errors(form.plainPassword.first)}}
        </div>
    </div>

    <div class="f-row">
        <div class="full-width">
            <label for="password2">{{ form_label(form.plainPassword.second, 'Confirmation', { 'attr': {'class': 'form-label'} }) }}</label>
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control','id':'password2'} }) }}
            {{form_errors(form.plainPassword.second)}}
        </div>
    </div>



    {{form_rest(form)}}
    <div class="f-row">
        <div class="full-width">
            <input type="submit" value="Créer mon compte" id="_submit" name="_submit"  class="btn color medium full">
        </div>
    </div>

    <p>Déjà membre? <a href="{{ path('fos_user_security_login') }}">Connexion</a>.</p>





</form>